

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
      <div class="col-sm-12">
        <br />
    <%= link_to "Se connecter avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class:"facebook-button" %><br />
      </div>
  <% end -%>

<hr>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="col-sm-12">
  <%= link_to "Vous avez oubliÃ© votre mot de passe ?", new_password_path(resource_name), class:"text-muted" %><br />
    </div>
<% end -%>


<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <div class="col-sm-6">
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class:"text-muted" %><br />
    </div>
<% end -%>


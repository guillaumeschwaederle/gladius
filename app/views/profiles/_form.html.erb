<%= simple_form_for @profile do |f| %>
  <%= f.input :first_name, placeholder: "Guillaume" %>
  <%= f.input :last_name, placeholder: "Capelle" %>
  <%= f.input :height, placeholder: "120" %>
  <%= f.input :weight, placeholder: "120" %>
  <%= f.input :ville, placeholder: "Lille" %>
  <%= f.input :specialite, placeholder: "Burpees" %>
  <%= f.input :user_id, as: :hidden, value: current_user.id %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Valider mon profil", class: "btn btn-outline-success btn-lg btn-block btn-margin-left-right" %>
<% end %>



<h1>Profiles#show</h1>
<p>Find me in app/views/profiles/show.html.erb</p>

<%= current_user.profile.first_name %>
<%= current_user.profile.last_name %>
<%= current_user.profile.height %> <%= "cm" if current_user.profile.height %>
<%= current_user.profile.weight %> <%= "kg" if current_user.profile.weight %>
<%= link_to "Edit", edit_profile_path, class: "btn btn-primary" %>
<hr>
<%= current_user.email %>

<% if current_user.profile.photo? %>
   <%= cl_image_tag @profile.photo, height: 200, width: 200, crop: :thumb, gravity: :face %>
 <% else %>
   <%= cl_image_tag "placeholder-gladius_tzhg4x.png", height: 200, width: 200 %>
 <% end %>

<%= link_to "Modifier mes informations de connexion", edit_user_registration_path, class: "btn btn-primary" %>

<% content_for :meta_title, "#{DEFAULT_META["meta_product_name"]} - Créer un nouveau programme" %>



<div class="content">
  <div class="left_section">
    <h1 class="title-left-layout text-center">Etape 1</h1>
    <h3 class=" text-center">Ajoutez des exercices à votre programme</h3>
    <div class="row list_training">
      <div class="search-bar">
        <form class="form-inline">
          <div class="form-group m-r-10">
            <%= form_tag(new_training_path, :method => "get", id: "exampleInputEmail2") do %>
              <%= text_field_tag :search, params[:search], placeholder: "Ex: Pompes", class: "form-control" %>
              <button type="submit" class="btn btn-outline-success waves-effect waves-light btn-md">Rechercher</button>
            <% end %>
          </div>
        </form>
      </div>
      <div class="row list_training">
        <% if @exercices.present? %>
          <%= render "index_exercices" %>
        <% else %>
          <p>Désolés, mais il n'existe pas d'exercices s'appelant "<%= params[:search] %>". Merci d'effectuer une nouvelle recherche.</p>
        <% end %>
      </div>
    </div>
  </div>

 <div class="right_section">
    <div class="container">
      <%= simple_form_for(Training.new, method: :post, class: 'right_section') do |form| %>
        <div class="card-box margin_box">
          <div id="newserie">
            <%= render "new_serie_name" %>
          </div>
        </div>
        <%= form.submit "Créer mon Programme", class: "btn btn-outline-primary btn-block btn-lg waves-effect waves-light btn-creer-mon-programme" %>
      <% end %>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
    <% javascript_pack_tag 'new_training'%>
<% end %>


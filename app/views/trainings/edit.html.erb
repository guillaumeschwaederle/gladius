<div class="content">
 <div class="left_section">
   <h1 class="title-left-layout text-center">Ajouter un exercice Ã  mon programme</h1>
   <div class="row list_training">
    <div class="search-bar">
    <form class="form-inline">
        <div class="form-group m-r-10">
            <%= form_tag(new_training_path, :method => "get", id: "exampleInputEmail2") do %>
              <%= text_field_tag :search, params[:search], placeholder: "Ex: Pompes", class: "form-control" %>
              <button type="submit" class="btn btn-outline-success waves-effect waves-light btn-md">Rechercher</button>
            <% end %>
          </div>
        </form>
      </div>
      <div class="row list_training">
          <%= render "index_exercices" %>
      </div>
    </div>
  </div>

 <div class="right_section">
    <div class="container">
      <%= simple_form_for(@training, method: :post, class: 'right_section') do |form| %>
        <div class="card-box margin_box">
          <div id="newserie">
            <!-- partials edit -->
            <%= render "edit_training", training: @training %>
          </div>
        </div>
        <%= form.submit "Modifier mon Programme", class: "btn btn-outline-primary btn-block btn-lg waves-effect waves-light" %>
      <% end %>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
    <% javascript_pack_tag 'new_training'%>
    <% javascript_pack_tag 'edit_training'%>
<% end %>


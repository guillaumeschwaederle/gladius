<% @exercices = Exercice.all %>
<div class="container">
    <div class="row">
        <% @exercices.take(20).each do |exercice| %>
            <div class="col-sm-4">
                <div class="card m-b-20"  data-name="<%= exercice.name %>">
                    <div class="card-body card-exercice-hover">
                    <h3><%= exercice.name %> </h2>
                        <p>  <%= exercice.description %> </p>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
<% content_for :meta_title, "#{DEFAULT_META["meta_product_name"]} - Mes exercices" %>
  <% @categories =  @exercices.map { |e| e.category }.uniq %>
  <div class="container text-center">
     <h1 class="title_programs"> Mes Exercices </h1>
      <div class="row btn-programs">
          <%= link_to new_exercice_path do %>
            <button class="btn btn-outline-primary btn-block">Créer un exercice</button>
          <% end %>
        </div>
        <% @categories.each do |cat| %>
          <div class= "title-left-layout underline-title">
            <h2><%= cat.capitalize %></h2>
          </div>
          <div class="row">
            <% @exercices.where(category: cat).each do |exercice| %>
              <div class="col-sm-4">
                <div class="card m-b-20"  data-name="<%= exercice.name %>">
                  <div class="card-body card-exercice-hover">
                    <h2><%= exercice.name %> </h2>
                      <p>  <%= exercice.description.first(120) + "..." %> </p>
                  </div>
                  <div class= "card-footer text-muted">
                    Catégorie : <strong><%= exercice.category.capitalize %></strong>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
